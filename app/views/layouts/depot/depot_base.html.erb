<!DOCTYPE html>
<html>
<head>
  <title>Pragprog Books Online Store</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'depot/depot_base', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'depot/depot_base', 'data-turbolinks-track': 'reload' %>
</head>

<body class="<%= controller.controller_name %>">
<div id="banner">
  <%= image_tag "depot/logo.svg", alt: "The pragmatic Bookshelf" %>
  <span class="title"><%= @page_title %></span>
</div>

<div id="columns">
  <div id="menu">
    <ul>
      <li><a href="#">Home</a></li>
      <li><a href="#">News</a></li>
      <li><a href="#">FAQ</a></li>
      <li><a href="#">Contact</a></li>
    </ul>
  </div>

  <div id="main">
    <%= yield %>
  </div>
</div>
</body>
</html>
